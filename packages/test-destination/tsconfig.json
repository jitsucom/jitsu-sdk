{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "ES5",
    "module": "ES2015",
    "lib": [
      "ES6",
      "ES2015",
      "ESNext"
    ],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "importHelpers": true,
    "removeComments": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "test_projects",
    "test",
    "tests",
    "templates"
  ],
  "include": [
    "./src"
  ]
}