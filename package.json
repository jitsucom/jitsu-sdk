{
  "name": "root",
  "version": "0.7.2",
  "private": true,
  "scripts": {
    "boot": "yarn install && yarn lerna bootstrap",

    "prettier:check": "prettier --check --config ./.prettierrc.json --ignore-path ./.prettierignore core source-connectors || (echo \"\tðŸ‘‰ðŸ‘‰ Run yarn prettier:fix!\" && exit 1)",
    "prettier:fix": "prettier --write --config ./.prettierrc.json --ignore-path ./.prettierignore core source-connectors",

    "build:core": "lerna run build --stream --scope jitsu-cli --scope '@jitsu/*'",
    "build:sources": "lerna run build --stream --scope 'jitsu-*-source'",
    "build:destinations": "lerna run build --stream --scope 'jitsu-*-destination'",
    "build:all": "lerna run build",

    "test:all": "yarn lerna run test --stream",

    "jitsu-cli": "yarn build:core && node core/jitsu-cli/lib/index.js",

    "ci": "yarn prettier:check && yarn build:all && yarn test:all",

    "lerna": "lerna",
    "clean:modules": "rm -rf `find . -type d -name node_modules`",
    "clean": "lerna run clean --stream"
  },
  "devDependencies": {
    "@types/node": "^16.11.7",
    "jest": "^27.3.1",
    "lerna": "^4.0.0",
    "prettier": "latest",
    "typescript": "^4.5.2"
  },
  "workspaces": [
    "core/*",
    "source-connectors/*",
    "destinations/*"
  ]
}
