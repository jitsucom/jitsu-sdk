{
  "name": "root",
  "private": true,
  "scripts": {
    "prettier:check": "prettier --check --config ./.prettierrc.json --ignore-path ./.prettierignore packages",
    "prettier:write": "prettier --write --config ./.prettierrc.json --ignore-path ./.prettierignore packages",
    "build": "lerna run build && lerna run test",
    "build-only": "lerna run build",
    "lerna": "lerna",
    "lerna:boot": "lerna bootstrap",
    "ci": "yarn build && lerna publish --canary --yes",
    "link-all": "lerna exec -- yarn link"
  },
  "devDependencies": {
    "@types/node": "^16.11.7",
    "jest": "^27.3.1",
    "lerna": "^4.0.0",
    "prettier": "latest",
    "typescript": "^4.5.2"
  },
  "workspaces": [
    "packages/*"
  ],
  "version": "0.0.0"
}
