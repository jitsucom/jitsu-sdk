{
  "compilerOptions": {
    "paths": {
      "tslib" : ["./node_modules/tslib/tslib.d.ts"]
    },
    "target": "ES2021",
    "module": "commonjs",
    "lib": [
      "ES6",
      "ES2015",
      "ES2021"
    ],
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "importHelpers": true,
    "removeComments": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "test_projects",
    "test",
    "templates"
  ]
}